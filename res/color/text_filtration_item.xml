<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 单击选中时字体颜色 -->
    <item android:state_pressed="true" android:color="@color/e60012"/>
    <!-- 有焦点时的字体颜色 -->
    <item android:state_focused="true" android:color="@color/e60012"/>
    <!-- 滚动选中时字体颜色 -->
    <item android:state_selected="true" android:color="@color/e60012"/>
    <!-- 默认字体颜色 -->
    <item android:color="@color/c3c3c3c"/>

</selector>