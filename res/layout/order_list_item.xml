<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/order_info_ic_business" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/delivery_status"
            android:layout_toRightOf="@id/icon"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/account_list_ic_arrow_r"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="山东找蓝翔山东找蓝翔山东找蓝翔山东找蓝翔山东找蓝翔"
            android:textColor="@color/c444444"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/delivery_status"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="山东找蓝翔"
            android:textColor="@color/e60012"
            android:textSize="16dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <LinearLayout
        android:id="@+id/view_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/order_pdt_item" />

    </LinearLayout>

    <TextView
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical|right"
        android:text="哈哈哈"
        android:textColor="@color/c3a3a3a" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/order_status"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/delete_btn_by"
            android:gravity="center"
            android:text="16dp"
            android:textColor="@color/e60012"
            android:textSize="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />
</LinearLayout>