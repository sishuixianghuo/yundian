<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6f6f6">

    <RelativeLayout
        android:id="@+id/personal_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/e60012">

        <EditText
            android:id="@+id/edit_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/button_seek"
            android:background="@drawable/style_category_seek"
            android:padding="5dp"
            android:textColor="@color/b6b6b6"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/button_seek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:src="@drawable/home_navbar_ic_search" />
    </RelativeLayout>

    <com.yundian.android.widgets.ImageCycleView
        android:id="@+id/ad_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_below="@+id/personal_top_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ad_view"
        android:background="@color/dcdcdc" />

    <LinearLayout
        android:id="@+id/classify"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ad_view"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:visibility="gone">

        <Button
            android:id="@+id/button_classify_brand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableRight="@drawable/home_ic_sifter"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="品牌"
            android:textColor="@color/c3c3c3c"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/dcdcdc" />

        <Button
            android:id="@+id/button_classify_purpose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableRight="@drawable/home_ic_sifter"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="用途"
            android:textColor="@color/c3c3c3c"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/dcdcdc" />

        <Button
            android:id="@+id/button_classify_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableRight="@drawable/home_ic_sifter"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="排序"
            android:textColor="@color/c3c3c3c"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/classify"
        android:background="@color/dcdcdc" />

    <GridView
        android:id="@+id/gv_commodity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/classify"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/f6f6f6"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <RelativeLayout
        android:id="@+id/rl_classify_brand"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/classify"
        android:visibility="gone"
        android:background="#33000000">

        <GridView
            android:id="@+id/gv_filtration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/f6f6f6"
            android:gravity="center"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:stretchMode="columnWidth" />

        <RadioGroup
            android:id="@+id/rg_filtration_purpose"
            android:layout_width="match_parent"
            android:background="@color/dcdcdc"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_purpose_1"
                android:text="@string/rb_1"
                android:checked="true"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_purpose_2"
                android:text="@string/rb_2"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_purpose_3"
                android:text="@string/rb_3"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_purpose_4"
                android:text="@string/rb_4"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_purpose_5"
                android:text="@string/rb_5"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_purpose_6"
                android:text="@string/rb_6"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_purpose_7"
                android:text="@string/rb_7"
                style="@style/SplashTheme"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_filtration_sort"
            android:layout_width="match_parent"
            android:background="@color/dcdcdc"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_sort_1"
                android:text="@string/rb_sort_1"
                android:checked="true"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_sort_2"
                android:text="@string/rb_sort_2"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_sort_3"
                android:text="@string/rb_sort_3"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_sort_4"
                android:text="@string/rb_sort_4"
                style="@style/SplashTheme"/>
            <RadioButton
                android:id="@+id/rb_sort_5"
                android:text="@string/rb_sort_5"
                style="@style/SplashTheme"/>
        </RadioGroup>

    </RelativeLayout>

</RelativeLayout>