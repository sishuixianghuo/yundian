<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@drawable/order_info_ic_business" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="5dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="山东找蓝翔"
            android:textColor="@color/c444444"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <LinearLayout
        android:id="@+id/view_contain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <RelativeLayout
        android:id="@+id/select_logistics"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"

            android:gravity="center_vertical"
            android:text="配送方式"
            android:textColor="@color/c3a3a3a"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/logistics_method"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="56dp"
            android:gravity="center_vertical"
            android:text="请选择配送方式"
            android:textColor="@color/c3a3a3a"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/order_list_ic_arrow_r" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <RelativeLayout
        android:id="@+id/select_pay"
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="付款方式"
            android:textColor="@color/c3a3a3a"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pay_method"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="56dp"
            android:gravity="center_vertical"
            android:text="请选择付款方式"
            android:textColor="@color/c3a3a3a"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/order_list_ic_arrow_r" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/computer_total"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="right|center_vertical"
            android:paddingLeft="16dp"
            android:text="小计：￥1000000000.00元"
            android:textColor="@color/e60012" />

        <TextView
            android:id="@+id/submit_order"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:background="@color/e60012"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="23dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/e6e6e6" />
</LinearLayout>