<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/image_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_kfz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_portrait"
        android:text="开发者"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/text_kfz"
        android:text="四喜丸子"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_kfz"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_portrait"
        android:text="2017-03-28 更新"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/button_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="下载"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_kfz"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_portrait"
        android:text="2017-03-28 更新"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_portrait"
        android:text="亡者农药自动MVP辅助"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_portrait"
        android:layout_toRightOf="@id/text_name" />

    <ImageView
        android:id="@+id/image_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_portrait"
        android:layout_toRightOf="@id/image_new" />

    <ImageView
        android:id="@+id/image_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_portrait"
        android:layout_toRightOf="@id/image_hot" />

    <TextView
        android:id="@+id/text_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name" 
        android:text="版本 v1.0.0"/>
    <TextView
        android:id="@+id/text_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_toRightOf="@id/text_version"
        android:text="下载 1234567890" />

</RelativeLayout>