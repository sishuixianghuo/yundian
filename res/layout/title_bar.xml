<?xml version="1.0" encoding="utf-8"?>
<com.yundian.android.widgets.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_top_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:background="@color/e60012">

    <EditText
        android:id="@+id/edit_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/button_seek"
        android:background="@drawable/style_category_seek"
        android:imeOptions="actionSearch"
        android:padding="5dp"
        android:textColor="@color/b6b6b6"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/button_seek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:src="@drawable/home_navbar_ic_search" />
</com.yundian.android.widgets.TitleBar>